---
import type { HTMLAttributes } from "astro/types";

import { css, cx } from "@/styled-system/css";

type Props = HTMLAttributes<"li">;

const { class: c, ...rest } = Astro.props;
---

<li
  class={cx(
    css({
      _last: {
        pb: 6,
      },
      listStyle: "inside",
    }),
    c,
  )}
  {...rest}
>
  <slot />
</li>
