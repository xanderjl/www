---
import "@/styles/globals.css";
import "@fontsource/dm-mono/400.css";
import "@fontsource/dm-serif-text/400.css";

import Footer from "@/components/Footer.astro";
import Head from "@/components/Head.astro";
import Navbar from "@/components/Navbar/index.astro";
import { css } from "@/styled-system/css";
import { container } from "@/styled-system/patterns";
import type { PropertyTypes } from "@/styled-system/types/prop-type";

interface Props {
  title?: string;
  description?: string;
  maxW?: PropertyTypes["maxW"];
}

const { title, description, maxW } = Astro.props;
---

<html lang="en">
  <Head {title} {description} />
  <body
    class={css({
      textStyle: "body",
      display: "flex",
      flexDir: "column",
      minH: "100vh",
      w: "100%",
    })}
  >
    <Navbar />
    <main
      class={container({
        flex: 1,
        display: "flex",
        flexDir: "column",
        w: "100%",
        maxW: maxW ?? "8xl",
        py: { base: 4, md: 6 },
      })}
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
