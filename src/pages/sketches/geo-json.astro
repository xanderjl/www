---
import { capitalCase } from "change-case";

import Sketch from "@/components/Sketch.astro";
import SketchLayout from "@/layouts/SketchLayout.astro";

export const prerender = true;

const { pathname } = Astro.url;
const title = capitalCase(pathname.split("/").pop() ?? "");
---

<script>
  import {
    convertSeed,
    createGrain,
    createOverlay,
    drawBorder,
    getDimensions,
    sketch,
  } from "@/utils/p5";
  import {
    getGeoData,
    type Draw,
    type Preload,
    type Setup,
    type WindowResized,
    type GeoJSON,
  } from "@/utils/p5";
  import type P5 from "p5";
  import type { LineString } from "geojson";

  const dimensions: number[] = getDimensions("A4");
  const padding: number[] = [40];
  const background = [255, 253, 252];
  let data: GeoJSON;
  let coordinates: LineString["coordinates"];
  let minXCoord: number;
  let maxXCoord: number;
  let minYCoord: number;
  let maxYCoord: number;
  let minZCoord: number;
  let maxZCoord: number;
  let margin: number;
  let seed = 0;

  const handleRenders = (p5: P5) => {
    const {
      coordinates: coords,
      coordTimes,
      minX,
      maxX,
      minY,
      maxY,
      minZ,
      maxZ,
    } = getGeoData(data);
    coordinates = coords;
    minXCoord = minX;
    maxXCoord = maxX;
    minYCoord = minY;
    maxYCoord = maxY;
    minZCoord = minZ;
    maxZCoord = maxZ;
    margin = p5.width * 0.075;
    seed = convertSeed(coordTimes.join());
  };

  const preload: Preload = (p5) => {
    data = p5.loadJSON("/data/geo/route_2022-10-02_6.04pm.geojson") as GeoJSON;
  };

  const setup: Setup = (p5) => handleRenders(p5);
  const windowResized: WindowResized = (p5) => handleRenders(p5);

  const draw: Draw = (p5) => {
    p5.clear(0, 0, 0, 0);
    p5.background(background);
    p5.stroke(0);
    p5.noFill();
    p5.strokeWeight(p5.width * 0.001);
    p5.noiseSeed(seed);
    p5.randomSeed(seed);

    p5.push();
    coordinates.forEach((coord) => {
      const long = coord[0];
      const lat = coord[1];
      const elev = coord[2];
      const x = p5.map(long, minXCoord, maxXCoord, margin, p5.width - margin);
      const y = p5.map(lat, minYCoord, maxYCoord, margin, p5.height - margin);
      const z = p5.map(
        elev,
        minZCoord,
        maxZCoord,
        p5.width * 0.75,
        p5.width * 0.1275,
      );
      p5.circle(x, y, z);
    });
    p5.pop();
    createOverlay(p5, background, margin);
    drawBorder(p5, margin);
    createGrain(p5);
  };

  sketch({
    preload,
    setup,
    windowResized,
    draw,
    dimensions,
    padding,
    seed,
    saveAs: "png",
    suffix: "geo-json",
  });
</script>

<SketchLayout {title}>
  <Sketch />
</SketchLayout>
