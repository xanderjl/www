---
import { getCollection } from "astro:content";

import OSSCard from "@/components/OSSCard.astro";
import { H1 } from "@/components/typography";
import Layout from "@/layouts/Layout.astro";
import { css } from "@/styled-system/css";

export const prerender = true;
const ossProjects = await getCollection("open-source");
---

<Layout title="Open Source">
  <H1 class={css({ pb: 4 })}>Open Source Projects</H1>
  <div
    class={css({
      display: "flex",
      flexWrap: "wrap",
      gap: 4,
    })}
  >
    {
      ossProjects.map(({ data: { name, description, href } }) => (
        <OSSCard name={name} description={description} href={href} />
      ))
    }
  </div>
</Layout>
