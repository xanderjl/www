{
  "json.schemas": [
    {
      "fileMatch": [
        "/src/content/open-source/*.json"
      ],
      "url": "/schemas/open-source-schema.json"
    },
    {
      "fileMatch": [
        "/src/content/resume-data/*.json"
      ],
      "url": "/schemas/resume-schema.json"
    },
    {
      "fileMatch": [
        "/src/content/work-history/*.json"
      ],
      "url": "/schemas/work-history-schema.json"
    }
  ],
  "typescript.tsdk": "node_modules/typescript/lib",
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.(frag|vert)$",
        "cmd": "clang-format -i ${file}"
      }
    ]
  }
}