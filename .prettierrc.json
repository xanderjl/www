{
  "plugins": ["prettier-plugin-astro"],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],
  "semi": false,
  "arrowParens": "avoid",
  "trailingComma": "none",
  "jsxSingleQuote": true,
  "singleQuote": true,
  "astroAllowShorthand": true
}
